{% set pageTitle = 'Каталог' %}
{% extends "app/src/njk/layout/index.njk" %}
{% block content %}
<div class="catalog-page-container">
    <article class="catalog-breadcrumbs-section">
        <div class="c-container">
            {% from "app/src/njk/components/breadcrumbs.njk" import breadcrumbs %}
            {{ breadcrumbs([['Каталог']]) }}
        </div>
    </article>
    <section class="catalog-section">
        <div class="filter-nav filter-nav_mobile">
            <button class="filter-nav__btn js--filter-toggle" type="button">
                <span class="visually-hidden">Открыть фильтры</span>
            </button>
            <p class="filter-nav__title">фильтр</p>
        </div>
        <ul class="catalog__nav-bottom">
            <li class="catalog__nav-list-item">
                <label class="catalog__nav-item-wrapper">
                    <span class="visually-hidden">Филтровать по популярности</span>
                    <input type="checkbox" class="catalog__nav-item-input">
                    <span class="catalog__nav-item" aria-hidden="true">
                        <img src="../images/icons/filter-star.svg" alt="" class="catalog__nav-item-icon" width="9"
                            height="9">
                    </span>
                </label>
            </li>
            <li class="catalog__nav-list-item">
                <label class="catalog__nav-item-wrapper">
                    <span class="visually-hidden">Филтровать по алфавиту</span>
                    <input type="checkbox" class="catalog__nav-item-input">
                    <span class="catalog__nav-item" aria-hidden="true">
                        <img src="../images/icons/filter-letter.svg" alt="" class="catalog__nav-item-icon" width="8"
                            height="9">
                    </span>
                </label>
            </li>
            <li class="catalog__nav-list-item">
                <label class="catalog__nav-item-wrapper">
                    <span class="visually-hidden">Филтровать по цене</span>
                    <input type="checkbox" class="catalog__nav-item-input">
                    <span class="catalog__nav-item" aria-hidden="true">
                        <img src="../images/icons/filter-cost.svg" alt="" class="catalog__nav-item-icon" width="8"
                            height="9">
                    </span>
                </label>
            </li>
        </ul>
        <div class="c-container">
            <div class="c-row">
                <div class="catalog__sidebar-col js--filter-popup">
                    <div class="catalog__sidebar-overlay js--filter-toggle"></div>
                    <form class="base-sidebar catalog__sidebar">
                        <button class="catalog__sidebar-btn-close js--filter-toggle" type="button">
                            <span class="visually-hidden">Закрыть</span>
                        </button>
                        <div class="base-sidebar__item-wrapper">
                            <p class="base-sidebar__title">КАТЕГОРИИ</p>
                            {% set filterCategory = [
                            ['Очищение и увлажнени'],
                            ['Сыворотки'],
                            ['Маски'],
                            ['Уход за телом'],
                            ['Уход для глаз и губ'],
                            ['Солнцезащитные средства'],
                            ['Наборы'],
                            ['Аксессуары']
                            ] %}
                            {% for name in filterCategory %}
                            <label class="base-sidebar__item">
                                <input type="checkbox" class="base-sidebar__input js--sidebar-checkbox" name="filter">
                                <span class="base-sidebar__text base-sidebar__text_active">{{name}}</span>
                            </label>
                            {% endfor %}
                        </div>
                        <div class="base-sidebar__item-wrapper">
                            <p class="base-sidebar__title">проблема</p>
                            {% set filterProblems = [
                            ['Акне'],
                            ['Морщины'],
                            ['Пигментация']
                            ] %}
                            {% for name in filterProblems %}
                            <label class="base-sidebar__item">
                                <input type="checkbox" class="base-sidebar__input js--sidebar-checkbox" name="filter">
                                <span class="base-sidebar__text base-sidebar__text_active">{{name}}</span>
                            </label>
                            {% endfor %}
                        </div>
                        <div class="base-sidebar__item-wrapper">
                            <p class="base-sidebar__title">Цена продажи</p>
                            {% include "app/src/njk/components/range_slider.njk" %}
                        </div>
                        <div class="base-sidebar__item-wrapper">
                            <button class="btn-main base-sidebar__search-btn" type="button">показать</button>
                            <button class="btn-base-text base-sidebar__reset-btn" type="submit">Сбросить</button>
                        </div>
                    </form>
                </div>
                <div class="catalog__product-col">
                    <div class="c-row">
                        {% for i in range(0, 9) %}
                        <div class="catalog__product-item-col">
                            {% set catalogItemData = {
                            img: '../images/img/catalog/catalog-item.png',
                            starBadge: true,
                            title: 'СЫВОРОТКА УСПОКАИВАЮЩАЯ C.P.R.',
                            text: 'Настоящее спасение от красноты и раздражения',
                            stars: 4,
                            cost: '5 288'
                            }%}
                            {% from "app/src/njk/components/catalog_item.njk" import catalogItem %}
                            {{ catalogItem(catalogItemData) }}
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="catalog-promo">
        <div class="c-container c-container_catalog-promo">
            <h1 class="base-page-title catalog-promo_title">Рекомендуем</h1>
            <div class="c-row base-slider-arrow base-slider-arrow_catalog-promo js--double-promo-slider">
                {% for i in range(0, 3) %}
                <div class="catalog-promo__col">
                    {% set promoItemData = {
                    title: 'Люкс Уход МОЛОДАЯ КОЖА',
                    starBadge: true,
                    items: [
                    {
                    img:'../images/img/catalog/promo1.png',
                    title: 'МАСКА ДЛЯ ЛИЦА AWAKEN'
                    },
                    {
                    img:'../images/img/catalog/promo2.png',
                    title: 'ANTI-AGE КРЕМ ДЛЯ ЛИЦА X-AGE'
                    }
                    ],
                    cost: '21 288',
                    profit: '2 685'
                    }%}
                    {% from "app/src/njk/components/double_promo_item.njk" import doublePromoItem %}
                    {{ doublePromoItem(promoItemData) }}
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
</div>
{% include "app/src/njk/components/basket_popup.njk" %}
{% endblock %}