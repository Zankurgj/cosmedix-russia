                            <div class="basket__item-counter-col">
                                <div class="basket__item-counter">
                                    <span class="basket__item-counter__title">Кол-во</span>
                                    {% from "app/src/njk/components/counter.njk" import counter %}
                                    {{ counter(loop.index) }}
                                </div>
                            </div>
                            <div class="basket__item-cost-col">
                                <span class="basket__item-cost">3 864 ₽</span>
                            </div>
                        </div>
                    </div>
