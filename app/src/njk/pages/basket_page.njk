{% set pageTitle = 'Тоник-мист с антиоксидантами Benefit Balance' %}
{% extends "app/src/njk/layout/index.njk" %}
{% block content %}
<div class="basket-page-container">
    <article class="basket-breadcrumbs">
        <div class="c-container">
            {% from "app/src/njk/components/breadcrumbs.njk" import breadcrumbs %}
            {{ breadcrumbs([['Блог'],[' Корзина']]) }}
        </div>
    </article>
    <section class="basket">
        <div class="c-container">
            <h1 class="base-page-title basket__title">корзина</h1>
